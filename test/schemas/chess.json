{
    "$id": "http://example.com/chess.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Chess",
    "type": "object",
    "required": ["data"],
    "properties": {
        "data": {
            "type": "object",
            "required": ["chess"],
            "properties": {
                "chess": {
                    "type": "object",
                    "required": [
                        "ascii",
                        "analysis",
                        "board",
                        "fen",
                        "gameOver",
                        "inCheck",
                        "inCheckmate",
                        "inDraw",
                        "inStalemate",
                        "insufficientMaterial",
                        "inThreefoldRepetition",
                        "moves",
                        "turn"
                    ],
                    "properties": {
                        "ascii": {
                            "type": "string"
                        },
                        "analysis": {
                            "type": "object",
                            "required": ["bestMove"],
                            "properties": {
                                "bestMove": {
                                    "$ref": "#/definitions/move"
                                }
                            }
                        },
                        "board": {
                            "type": "array",
                            "maxItems": 8,
                            "minItems": 8,
                            "items": {
                                "required": ["rank", "squares"],
                                "properties": {
                                    "rank": {
                                        "type": "integer",
                                        "enum": [1, 2, 3, 4, 5, 6, 7, 8]
                                    },
                                    "squares": {
                                        "type": "array",
                                        "items": {
                                            "required": ["file", "piece"],
                                            "properties": {
                                                "file": {
                                                    "type": "string",
                                                    "enum": ["a", "b", "c", "d", "e", "f", "g", "h"]
                                                },
                                                "piece": {
                                                    "oneOf": [
                                                        { "type": "null" },
                                                        { "$ref": "#/definitions/piece" }
                                                    ]
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "fen": {
                            "type": "string"
                        },
                        "gameOver": {
                            "type": "boolean"
                        },
                        "inCheck": {
                            "type": "boolean"
                        },
                        "inCheckmate": {
                            "type": "boolean"
                        },
                        "inDraw": {
                            "type": "boolean"
                        },
                        "inStalemate": {
                            "type": "boolean"
                        },
                        "insufficientMaterial": {
                            "type": "boolean"
                        },
                        "inThreefoldRepetition": {
                            "type": "boolean"
                        },
                        "moves": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/move"
                            }
                        },
                        "turn": {
                            "type": "string",
                            "enum": ["w", "b"]
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "boardRow": {
            "type": "array",
            "maxLength": 8,
            "minLength": 8,
            "items": {
                "oneOf": [
                    { "type": "null" },
                    { "$ref": "#/definitions/piece" }
                ]
            }
        },
        "move": {
            "type": "object",
            "required": ["from", "to"],
            "properties": {
                "from": {
                    "type": "string"
                },
                "to": {
                    "type": "string"
                },
                "san": {
                    "type": "string"
                }
            }
        },
        "piece": {
            "type": "object",
            "required": ["type", "color"],
            "properties": {
                "type": {
                    "type": "string"
                },
                "color": {
                    "type": "string"
                }
            }
        }
    }
}
